#!/bin/sh
# natcapd integration for firewall3

/etc/init.d/natcapd enabled || exit 0

iptables -t nat -C PREROUTING -p udp --dport 53 -j REDIRECT --to-ports 53 || iptables -t nat -I PREROUTING -p udp --dport 53 -j REDIRECT --to-ports 53
iptables -C FORWARD -m mark --mark 0x99 -j ACCEPT || iptables -I FORWARD -m mark --mark 0x99 -j ACCEPT
iptables -C INPUT -m mark --mark 0x99 -j ACCEPT || iptables -I INPUT -m mark --mark 0x99 -j ACCEPT

exit 0
